<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/common_icon_back_black_n"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:id="@+id/search_back"/>
                <EditText
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:hint="病症、药品名称、医生姓名"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="@dimen/dp_30"
                    android:imeOptions="actionSearch"

                    android:id="@+id/search_name"
                    android:background="@drawable/ed_bj"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textColor="@color/purple_500"
                    android:textSize="@dimen/dp_20"
                    android:layout_height="@dimen/dp_30"
                    android:text="搜索"
                    android:id="@+id/search_btn"/>
            </LinearLayout>
           <LinearLayout
               android:id="@+id/historysearch"
               android:visibility="gone"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_200"
               android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dp_10"
                   android:layout_marginLeft="@dimen/dp_10"
                   android:textColor="#FF0000"
                   android:text="历史搜索"/>
               <com.wd.home.view.LiuShiView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/liushi"
                   />
           </LinearLayout>
           <LinearLayout
               android:id="@+id/hotsearch"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dp_10"
                   android:layout_marginLeft="@dimen/dp_10"
                   android:textColor="#FF0000"
                   android:text="热门搜索"/>
               <com.wd.home.view.LiuShiView
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_200"
                   android:id="@+id/liushi1"
                   />
           </LinearLayout>
            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:text="医生"
                android:textSize="@dimen/dp_20"
                android:id="@+id/doctor"
                android:textColor="#4CAF50"/>
            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/search_rec1"/>
            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:text="药品"
                android:textSize="@dimen/dp_20"
                android:id="@+id/drug"
                android:textColor="#4CAF50"/>
            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/search_rec2"/>
            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:text="病症"
                android:textSize="@dimen/dp_20"
                android:id="@+id/disease"
                android:textColor="#4CAF50"/>
            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/search_rec3"/>
            <TextView
                android:id="@+id/wu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="暂无数据"
                android:textSize="@dimen/dp_50"
                android:visibility="gone"
                android:gravity="center"/>
        </LinearLayout>
    </ScrollView>

</layout>