<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            tools:context=".view.FindSickCircleInfoActivity">
            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fh"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/common_icon_back_black_n" />

                <TextView
                    android:id="@+id/findsickcircleinfotitlesname"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_80"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/dp_20"
                    android:layout_toRightOf="@id/fh"
                    android:text="我的档案" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/common_nav_message_black_n" />
            </RelativeLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/look_file"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[主要症状]"
                    android:textColor="#03A9F4"/>
                <TextView
                    android:id="@+id/zz"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="面神经"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[现病史]"
                    android:textColor="#03A9F4"/>
                <TextView
                    android:id="@+id/xbs"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="内科"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[既往病史]"
                    android:textColor="#03A9F4"/>
                <TextView
                    android:id="@+id/jwbs"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="病症详情"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[治疗经历]"
                    android:textColor="#03A9F4"/>
                <TextView
                    android:id="@+id/jl"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="内科"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[相关图片]"
                    android:textColor="#03A9F4"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/myfile_rec"/>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="wrap_content"
                    android:id="@+id/myfile_delete"
                    android:text="删除"/>
                <Button
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="wrap_content"
                    android:id="@+id/myfile_edit"
                    android:text="编辑"/>
            </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/no_message"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/no_data"
                    android:layout_marginTop="@dimen/dp_200"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:src="@mipmap/no_message"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您还没有档案哦"
                    android:textSize="@dimen/dp_25"
                    android:layout_below="@+id/no_data"
                    android:id="@+id/ooo"
                    android:layout_centerHorizontal="true"/>
                <Button
                    android:layout_below="@id/ooo"
                    android:layout_marginTop="@dimen/dp_100"
                    android:layout_marginHorizontal="@dimen/dp_40"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="添加"
                    android:background="#03A9F4"
                    android:id="@+id/add_myfile"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</layout>