<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.stx.xhb.xbanner.XBanner
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_260"
                    app:isAutoPlay="true"
                    android:id="@+id/xba"/>
                <LinearLayout
                    android:layout_marginVertical="@dimen/dp_12"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/dp_5"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="#03A9F4"
                        ></TextView>
                    <TextView
                        android:id="@+id/zsbd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="知识宝典"
                        android:textSize="@dimen/sp_16"
                        android:layout_gravity="center"
                        android:textColor="#03A9F4"
                        android:layout_marginLeft="@dimen/dp_10"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_180"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginVertical="@dimen/dp_10"
                        android:layout_weight="1">
                        <TextView

                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="常见病症"/>
                        <ImageView
                            android:id="@+id/cjbz"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_width="@dimen/dp_157"
                            android:layout_height="@dimen/dp_157"
                            android:src="@mipmap/common_disease"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginVertical="@dimen/dp_10"
                        android:layout_weight="1">
                        <TextView

                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="常用药品"/>
                        <ImageView
                            android:id="@+id/cjyp"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_width="@dimen/dp_157"
                            android:layout_height="@dimen/dp_157"
                            android:src="@mipmap/common_drugs"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginVertical="@dimen/dp_12"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="horizontal">
                    <TextView

                        android:layout_width="@dimen/dp_5"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="#03A9F4"
                        ></TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="问诊咨询"
                        android:textSize="@dimen/sp_16"
                        android:layout_gravity="center"
                        android:textColor="#03A9F4"
                        android:layout_marginLeft="@dimen/dp_10"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ks1_rec"/>
                    <LinearLayout
                        android:layout_marginVertical="@dimen/dp_12"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/ks_rec"
                            android:layout_width="@dimen/dp_5"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:background="#03A9F4"
                            ></TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="健康测评"
                            android:textSize="@dimen/sp_16"
                            android:layout_gravity="center"
                            android:textColor="#03A9F4"
                            android:layout_marginLeft="@dimen/dp_10"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/jkcp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_200"
                    android:src="@mipmap/health_assessment"/>
                <LinearLayout
                    android:layout_marginVertical="@dimen/dp_12"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/dp_5"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="#03A9F4"
                        ></TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="健康资讯"
                        android:textSize="@dimen/sp_16"
                        android:layout_gravity="center"
                        android:textColor="#03A9F4"
                        android:layout_marginLeft="@dimen/dp_10"/>
                </LinearLayout>

                <com.google.android.material.tabs.TabLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tab"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rec"/>

            </LinearLayout>

        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_32"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_pic"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:src="@mipmap/ic_launcher_round" />

            <EditText
                android:id="@+id/home_search"
                android:layout_width="@dimen/dp_250"
                android:layout_height="@dimen/dp_32"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/ed_bj"
                android:hint="病症、药品名称、医生姓名"
                android:textSize="@dimen/dp_10" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_32"
                android:layout_marginRight="@dimen/dp_12"
                android:src="@mipmap/common_nav_message_black_n" />
        </LinearLayout>
    </RelativeLayout>

</layout>